<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sxquan.manage.content.mapper.BannerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sxquan.core.pojo.content.Banner">
        <id column="banner_id" property="bannerId"/>
        <result column="banner_name" property="bannerName"/>
        <result column="title" property="title"/>
        <result column="img" property="img"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="BaseColumnList">
            banner_id, banner_name, title, img, description, create_time, update_time
    </sql>
</mapper>
